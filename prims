#include <stdio.h>

#define MAX 10
#define INF 9999  // a large number to represent "infinity"

int main() {
    int n;
    int cost[MAX][MAX];   // adjacency matrix
    int visited[MAX] = {0};
    int no_of_edges = 0;
    int min, a, b;
    int total_cost = 0;

    printf("Enter the number of vertices: ");
    scanf("%d", &n);

    printf("Enter the adjacency matrix (0 if no edge):\n");
    for (int i = 0; i < n; i++)
        for (int j = 0; j < n; j++) {
            scanf("%d", &cost[i][j]);
            if (cost[i][j] == 0)
                cost[i][j] = INF;  // replace 0 with INF for easier comparisons
        }

    // Start from the first vertex
    visited[0] = 1;

    printf("\nEdges in the Minimum Spanning Tree:\n");

    while (no_of_edges < n - 1) {
        min = INF;

        // Find the smallest edge that connects visited â†’ unvisited vertex
        for (int i = 0; i < n; i++) {
            if (visited[i]) {
                for (int j = 0; j < n; j++) {
                    if (!visited[j] && cost[i][j] < min) {
                        min = cost[i][j];
                        a = i;
                        b = j;
                    }
                }
            }
        }

        printf("%d - %d : %d\n", a + 1, b + 1, min);
        total_cost += min;
        visited[b] = 1;
        no_of_edges++;
    }

    printf("Total Minimum Cost = %d\n", total_cost);

    return 0;
}
