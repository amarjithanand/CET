#include <stdio.h>

#define MAX 30

int parent[MAX];

// Find root parent
int find(int i) {
    while (parent[i] != i)
        i = parent[i];
    return i;
}

// Union of two sets
void unionSet(int i, int j) {
    int a = find(i);
    int b = find(j);
    parent[a] = b;
}

int main() {
    int n, e;
    int u, v, w;
    int min, a, b;
    int cost = 0;

    int weight[MAX][3];

    printf("Enter number of vertices: ");
    scanf("%d", &n);

    printf("Enter number of edges: ");
    scanf("%d", &e);

    printf("Enter edges (u v weight):\n");
    for (int i = 0; i < e; i++)
        scanf("%d %d %d", &weight[i][0], &weight[i][1], &weight[i][2]);

    // Initialize parent array
    for (int i = 0; i < n; i++)
        parent[i] = i;

    int edgesAccepted = 0;

    while (edgesAccepted < n - 1) {
        min = 9999;

        for (int i = 0; i < e; i++) {
            if (weight[i][2] < min) {
                min = weight[i][2];
                a = weight[i][0];
                b = weight[i][1];
                u = i;
            }
        }

        int set_u = find(a);
        int set_v = find(b);

        if (set_u != set_v) {
            printf("Edge %d-%d = %d\n", a, b, min);
            cost += min;
            edgesAccepted++;
            unionSet(set_u, set_v);
        }

        // Mark edge used by setting weight to large number
        weight[u][2] = 9999;
    }

    printf("\nMinimum Cost = %d\n", cost);
    return 0;
}
